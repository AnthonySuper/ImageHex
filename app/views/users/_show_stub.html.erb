<div class="creators-list-item">
  <div class="upper-info">
    <div class="creators-list-item-header">
      <%= link_to creator do %>
        <%= image_tag creator.avatar(:small) %>
      <% end %> 
      <%= link_to creator.name, creator, :class => "user-name" %>
    </div>

      <div class="creators-list-item-description">
        <%= markdown_parse creator.description %>
      </div>
  </div>

  <ul class="creators-creations-list">
    <% creator.creations.take(7).each do |c| %>
      <li class="creators-creations-list-item">
        <%= link_to image_tag(c.f(:small)), c %>
      </li>
    <% end %>
  </ul>
</div>
