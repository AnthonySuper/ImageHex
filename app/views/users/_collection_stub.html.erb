<figure class="embed-collection-container">

  <%= link_to collection_path(c) do %>
    <div class="collection-thumbnail">
      <% if c.images.count > 0 %>
        <%= image_tag c.images.first.f %>
      <% end %>
    </div>

    <figcaption class="collection-information">
      <p class="collection-title"><%= c.name %>

      <!-- Curators needs to be replaced by an actual list of curators (see Wiki page with mockups). -->
      <p class="collection-curators">Curated by Curators
      
      <% if c.description != '' %>
        <p class="collection-description"><%= c.description %>
      <% end %>
    </figcaption>

  <% end %>

</figure>
