<header id="header-container">
  <div id="header-left">
    <div class="header-item">
      <%= link_to 'Home', root_path %>
    </div>
  </div>

  <div id="header-search">
    <input type="text" placeholder="Search" />
  </div>

  <div id="header-right">
    <% if user_signed_in? %>

      <div class="header-item">
        <%= link_to 'Upload', new_image_path %>
      </div>

      <div class="header-item">
        <a href="#">Notifications</a>
      </div>

      <div id="dd" class="wrapper-dropdown">
        <div class="header-item" id="username">
          <%= current_user.name %>
        </div>

        <ul class="dropdown">
          <li><%= link_to 'Profile', current_user %>

          <% if current_user.admin? %>
            <li><%= link_to 'Admin', admin_images_path %>
          <% end %>
          
          <li><%= link_to 'Settings', settings_path %>
          
          <li><%= button_to 'Sign out', destroy_user_session_path, method: :delete %>
        </ul>
      </div>

    <% else %>

      <div class="header-item">
        <%= link_to 'Sign in', new_user_session_path %>
      </div>

    <% end %>
  </div>
</header>
