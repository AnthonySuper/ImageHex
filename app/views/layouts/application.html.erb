<!DOCTYPE html>
<html>
<head>
  <title>ImageHex</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
  ga('create', 'UA-30487635-3', 'auto');
  ga('send', 'pageview');
  </script>
  <meta name="google-site-verification" content="BFIseznvNRiIyyHNS2wvnVAWXwl9g_47y3jE9HVmvLY" />
  <!-- Viewport meta tag -->
  <meta name="viewport" content="width=device-width, user-scalable=no">

  <!-- UTF-8 Character Set -->
  <meta charset="utf-8">
</head>

<body>
  <%= render 'layouts/header' %>
  <% if notice %>
    <div class="alert alert-success"><p><%= notice %></p></div>
  <% end %>
  <% if info %>
    <div class="alert alert-info"><p><%= info %></p></div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger"><p><%= alert %></p></div>
  <% end %>
  <% if warning %>
    <div class="alert alert-warning"><p><%= warning %></p></div>
  <% end %>

  <div id="masthead">
    <%= yield %>
  </div>

  <%= render 'layouts/footer' %>

  <!-- This enables Google Search inline search box -->
  <script type="application/ld+json">
  {
     "@context": "http://schema.org",
     "@type": "WebSite",
     "url": "http://www.imagehex.com/",
     "potentialAction": {
       "@type": "SearchAction",
       "target": "http://imagehex.com/search?query%5B%5D={search_term_string}",
       "query-input": "required name=search_term_string"
     }
  }
  </script>
</body>
</html>
