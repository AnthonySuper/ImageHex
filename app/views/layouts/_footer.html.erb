<% cache "footer" do %>
  <footer class="footer-container" role="contentinfo">
    <div class="footer">

    <%# ImageHex description text %>
      <div class="footer-description-column">
        <img src=<%= asset_path("logo/imagehex-monochrome-white-text.svg") %> alt="<%= t(".imagehex") %>">
        <p class="footer-description-body"><%= t(".imagehex_description") %>
        <p class="footer-description-copyright"><%= t(".imagehex_copyright", year: Time.now.year) %>
      </div>

      <%# Footer columns %>
      <div class="footer-links-column">
        <ul class="footer-links-list">
          <li><%= link_to t(".about"), about_path %>
          <li><%= link_to t(".people"), people_path %>
          <li><%= link_to t(".contact"), contact_path %>
          <li><%= link_to t(".listings"), listings_path %>
          <li><%= link_to t(".faq"), faq_path %>
          <li><%= link_to t(".rules"), rules_path %>
          <li><%= link_to "Guidelines", guidelines_path %>
          <li><%= link_to "Terms of Service", terms_of_service_path %>
          <li><%= link_to t(".help"), help_path %>
          <li><%= link_to t(".press_kit"), press_path %>
        </ul>
      </div>
    </div>
  </footer>
<% end %> 
