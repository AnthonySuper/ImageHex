<% notifications.includes(:subject).order('created_at DESC').each do |note| %>
  <li class="notifications-list-item">
    <%= link_to note.subject do %>
      <%= t(".#{note.kind}", username: User.find(note.user_id).name ) %>

      <%# "Time ago" for notification %>
      <p class="notification-time-ago"><%= time_ago_in_words(note.created_at) + " " + t(".ago") %></p>
    <% end %>
  </li>
<% end %>
