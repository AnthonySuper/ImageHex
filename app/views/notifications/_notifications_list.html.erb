<% if notifications.count > 0 %>
  <% notifications.includes(:subject).each do |note| %>
    <li class="notifications-list-item">
      <%= link_to note.subject do %>
        <p class="notification-message"><%= note.message %></p>
        <p class="notification-time-ago"><%= time_ago_in_words(note.created_at) %> ago</p>
      <% end %>
    </li>
  <% end %>
<% else %>
  <div class="notifications-empty">
    No notifications yet!
  </div>
<% end %>