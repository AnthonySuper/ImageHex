<%- title t(".new_collection_page_title") %>

<%= flash[:error] %>

<div class="new-collection-container">
  <%= form_for @collection do |f| %>
    
    <div class="new-collection-field">
      <%= f.label :name, t(".title"), class: "label", for: "new-collection-title" %>
      <%= f.text_field :name, id: "new-collection-title" %>
    </div>

    <div class="new-collection-field">
      <%= f.label :name, t(".description"), class: "label", for: "new-collection-description" %>
      <%= f.text_area :description, id: "new-collection-description" %>
    </div>

    <%# You're going to be able to select the type of collections soon,
      for now we just use this %>
    <%= f.hidden_field :type, value: "Subjective" %>
    
    <%= f.submit t(".create_collection"), id: "new-collection-submit", class: "btn btn-green" %>
  <% end %>
</div>
