<h1>Pay</h1>
<%= form_tag charge_commission_offer_path(@offer), method: :post do %>

  <script
    src="https://checkout.stripe.com/checkout.js"
    class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-amount="<%= @offer.total_price %>"
    data-name="ImageHex"
    data-description="Commission for <%= @offer.offeree_name %>"
    data-locale="auto"
    data-email="<%= current_user.email %>">
  </script>
<% end %>
