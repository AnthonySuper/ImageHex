<div id="image-page-toolbar">
  <div class="left">
    <div id="add-tag-group-button">
      <%= t(".add_a_tag_group") %>
    </div>
  </div>

  <div class="right">
    <div id="image-help-button">
      <%= t(".help") %>
    </div>

    <div id="image-info">
      <div id="image-info-button">
        <%= t(".info") %>
      </div>

      <%# Metadata table %>
      <div data-showon="#image-info-button" class="toolbar-tooltip" id="image-info-tooltip">
        <table class="image-info-table">
          <tbody>

            <tr class="table-row">
              <td class="column-one-cell">Date taken</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">Dimensions</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">File name</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">File size</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">Medium</td>
              <td class="column-two-cell"><%= t("activerecord.attributes.mediums.#{@image.medium}") %></td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">License</td>
              <td class="column-two-cell"><%= t("activerecord.attributes.licenses.#{@image.license}") %></td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">Camera</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">Lens</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">Focal Length</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">Exposure</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">F Number</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">ISO</td>
              <td class="column-two-cell">-</td>
            </tr>

            <tr class="table-row">
              <td class="column-one-cell">Flash</td>
              <td class="column-two-cell">-</td>
            </tr>

          </tbody>
        </table>
      </div>
    </div>

    <%# Edit history button %>
    <div id="edit-history-button">
      <%= t(".view_edit_history") %>
    </div>
  </div>

</div>
