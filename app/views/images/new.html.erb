<div id="upload-page-container">
  <h2>Upload images</h2>

  <%= form_for @image, html: {id: "dropzone-form"} do |f| %>
    
    <div class="upload-container">
      <%# Start by generating select tags for enums %>
      <%# The License select is different from the %>
      <%# medium because the options are specially %>
      <%# capitalized. %>
      <div class="image-thumbnail"></div>

      <div class="custom-select-wrapper">
        <%= f.select :license, Image.licenses.map{|k, v| [k, k]}, {}, { :class => 'custom-select', :id => 'image-license-select' } %>
        <%# Note that the above has a "{}" because %>
        <%# html-options needs to be invoked before %>
        <%# the CSS class can be used. %>
      </div>

      <%# The Medium select input. %>
      <div class="custom-select-wrapper">
        <%= f.select :medium, Image.media.keys.to_a.map{|x| [x.titleize, x]}, {}, { :class => 'custom-select', :id => 'image-media-select' } %>
      </div>
    </div>

    <div class="new-upload-container">
      <div class="top-half" id="upload-dropzone">

        <p>Drop images here to upload
      </div>

      <hr>
      <p class="or">or

      <div class="bottom-half">

        <div class="file-upload-coverup">
          
          <p>Click here to choose a file
        </div>
      </div>

    </div>

    <%= f.submit "Submit" %>
  <% end %>
</div>
