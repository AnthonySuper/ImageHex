<div id="sign-in-container">
  <h3 class="sign-in-header"><%= t(".sign_in") %></h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div id="sign-in-fields">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: t(".email") %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: t(".password") %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t(".remember_me") %>
        </div>
      <% end -%>
    </div>

    <div class="actions">
      <%= f.submit t(".sign_in") %>
    </div>

  <% end %>
</div>

<div id="sign-in-extras-container">
  <%= render "devise/shared/links" %>
</div>