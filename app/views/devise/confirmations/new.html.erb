<div id="sign-in-container">

  <div class="sign-in-header">
    <img src="/logo/imagehex-color-with-black-text.svg">
    <h4><%= t(".email_confirmation") %></h4>
  </div>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <div id="sign-in-fields">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: t(".email") %>
      </div>
    </div>

    <%= f.submit t(".resend_confirmation_instructions") %>

  <% end %>
</div>

<div id="sign-in-extras-container">
  <%= render "devise/shared/links" %>
</div>