<%# "Already have an account? Sign in." %>
<%# Any page that isn't the Sign In page %>
<%- if controller_name != 'sessions' %>
  <div class="sign-in-extras-row">
    <%= t(".already_have_an_account") %>
    <%= link_to t(".sign_in"), new_session_path(resource_name) %>
  </div>
<% end -%>

<%# "Donâ€™t have your phone? Enter a Two-Factor backup code." %>
<%# Two-Factor Authentication page %>
<%- if controller_name == 'sessions' && action_name == 'create' %>
  <div class="sign-in-extras-row">
    <%= t(".dont_have_your_phone") %>
    <%= link_to t(".enter_a_two_factor_backup_code"), "#", id: "two-factor-backup-code-button" %>
  </div>
<% end -%>

<%# "Forgot your password?" %>
<%# Sign in page %>
<%- if devise_mapping.recoverable? && controller_name == 'sessions' && action_name == 'new' %>
  <div class="sign-in-extras-row">
    <%= link_to t(".forgot_your_password"), new_password_path(resource_name) %>
  </div>
<% end -%>

<%# "Don't have an account? Create an account." %>
<%# Any page that isn't the Create Account page %>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="sign-in-extras-row">
    <%= t(".dont_have_an_account") %>
    <%= link_to t(".create_an_account"), new_registration_path(resource_name) %>
  </div>
<% end -%>

<%# "Didn't receive confirmation instructions?" %>
<%# Create an Account page %>
<%- if devise_mapping.confirmable? && controller_name == 'registrations' %>
  <div class="sign-in-extras-row">
    <%= link_to t(".didnt_receive_confirmation"), new_confirmation_path(resource_name) %>
  </div>
<% end -%>

<%# "Didn't receive unlock instructions?" %>
<%# Unlock instructions page %>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="sign-in-extras-row">
    <%= link_to t(".didnt_receive_unlock"), new_unlock_path(resource_name) %>
  </div>
<% end -%>
